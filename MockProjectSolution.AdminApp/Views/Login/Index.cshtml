@using MockProjectSolution.Application.Users.Dtos
@model LoginRequest
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="/css/styles1.css" rel="stylesheet" />
</head>
<!------ Include the above in your HEAD tag ---------->
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-md-offset-4">
                <div class="account-box">
                    <div class="logo ">
                        <img src="http://placehold.it/90x38/fff/6E329D&text=LOGO" alt="" />
                    </div>
                    <form class="form-signin" asp-action="index" asp-controller="login" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <input type="text" class="form-control" asp-for="UserName" placeholder="Nhập tài khoản" required autofocus />
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" asp-for="Password" placeholder="Nhập mật khẩu" required />
                        </div>
                        <label class="checkbox">
                            <input type="checkbox" asp-for="RememberMe" />
                            Nhớ mật khẩu
                        </label>
                        <button class="btn btn-lg btn-block purple-bg" type="submit">
                            Đăng nhập
                        </button>
                    </form>
                    <a class="forgotLnk" href="http://www.jquery2dotnet.com">Quên mật khẩu?</a>
                    <div class="or-box">
                        <span class="or">HOẶC</span>
                        <div class="row">
                            <div class="col-md-6 row-block">
                                <a href="http://www.jquery2dotnet.com" class="btn btn-facebook btn-block">Facebook</a>
                            </div>
                            <div class="col-md-6 row-block">
                                <a href="http://www.jquery2dotnet.com" class="btn btn-google btn-block">Google</a>
                            </div>
                        </div>
                    </div>
                    <div class="or-box row-block">
                        <div class="row">
                            <div class="col-md-12 row-block">
                                <a href="http://www.jquery2dotnet.com" class="btn btn-primary btn-block">Tạo tài khoản mới</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
